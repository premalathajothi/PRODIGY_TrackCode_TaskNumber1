import re

def check_password_strength(password):
    length_criteria = len(password) >= 8
    upper_criteria = re.search(r'[A-Z]', password) is not None
    lower_criteria = re.search(r'[a-z]', password) is not None
    number_criteria = re.search(r'[0-9]', password) is not None
    special_criteria = re.search(r'[\W_]', password) is not None
    
    criteria_met = sum([length_criteria, upper_criteria, lower_criteria, number_criteria, special_criteria])
    
    feedback = []
    if not length_criteria:
        feedback.append("at least 8 characters")
    if not upper_criteria:
        feedback.append("an uppercase letter")
    if not lower_criteria:
        feedback.append("a lowercase letter")
    if not number_criteria:
        feedback.append("a number")
    if not special_criteria:
        feedback.append("a special character")

    if criteria_met == 5:
        return "Strong", feedback
    elif criteria_met >= 3:
        return "Medium", feedback
    else:
        return "Weak", feedback

password = input("Enter your password: ")
strength, feedback = check_password_strength(password)

print(f"Your password strength is: {strength}")
if strength != "Strong":
    print("To make your password stronger add: " + ", ".join(feedback))
